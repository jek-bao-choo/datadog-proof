<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

    <!-- STRINGS.XML CONNECTION EXAMPLE:
         android:text="@string/send_money" references:
         strings.xml: <string name="send_money">Send Money</string>
         Result: Button displays "Send Money" text
         Build process: @string/send_money → R.string.send_money → "Send Money" -->
    <Button
            android:id="@+id/btn_send_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/send_money"
            android:textSize="16sp"
            android:paddingVertical="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_book_car"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

    <!-- ANOTHER STRINGS.XML REFERENCE:
         android:text="@string/book_car" connects to:
         strings.xml: <string name="book_car">Book Car</string>
         Traceability: XML Reference → strings.xml Entry → Displayed Text -->
    <Button
            android:id="@+id/btn_book_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="@string/book_car"
            android:textSize="16sp"
            android:paddingVertical="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
</androidx.constraintlayout.widget.ConstraintLayout>